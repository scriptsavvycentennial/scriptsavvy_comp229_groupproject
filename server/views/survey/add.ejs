<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="title">Survey Title</label>
                    <input type="text" class="form-control"
                    id="title"
                    placeholder="Enter the Survey Title"
                    name="title" required>
                </div>

                <div id="questionsContainer">
                    <!-- questions will be added here -->
                </div>

                <button class="btn btn-primary" type="button" onclick="addQuestion()">
                    <i class="fas fa-plus-circle"></i> Add Question
                  </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-edit"></i>Create Survey</button>
                <a href="/survey-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
            
        </div>
    </div>
</div>
<script>
    function addQuestion(){
        const container = document.getElementById("questionsContainer");

        const questionDiv = document.createElement("div");
        questionDiv.innerHTML = `
        <div class="form-group">
        <br>
        <label for="questions">Question:</label>
        <input type="text" class="form-control name="questions" id="questions" required>
        <label for="choices">Choices (comma-separated):</label>
        <input type="text" class="form-control name="choices" id="choices" required> <br>
        </div>`;

        container.appendChild(questionDiv);
    }
</script>
